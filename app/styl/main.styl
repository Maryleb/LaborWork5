grey = #E3E3E3
darkGrey = #DCDCDC
navy = #164B69

text-style(size, family)
	font-size size
	font-family family

body
	background navy
	text-style(14px, arial)
	width 90%
	max-width 800px
	margin 15px auto

.central_block
	background grey
	margin 30px auto

.menu
	font-weight bold
	display flex
	margin auto
	justify-content center
	a
		text-decoration none
		color black
	.active
		background darkGrey

.menu_item
	padding 20px

	&:hover
		background darkGrey

p
	text-align justify
	text-indent 30px
	letter-spacing normal
	line-height 2
	padding 15px

.container_css
	width 90%
	margin auto
	min-height 750px

.image
	display inline
	vertical-align middle
	width 300px
	float right
	margin 7px 0 7px 7px
	padding 10px

.second_block
	width 200px
	margin 0 auto
	.vid
		width 100%

.img_block
	display flex
	justify-content space-around
	.image_1
		img
			width 100%
			padding 0 15px

.block1
	display flex
	justify-content space-evenly
	align-items center

.block1_image
	width 50%
	overflow: auto;
	img
		box-sizing border-box
		padding 10px
		width 100%
		

.block2
	display flex

.block3
	display flex
	justify-content space-evenly
	.text3
		box-sizing border-box
		padding 10px

@media (max-width 600px)
	.central_block
		width 100%
		margin auto

	.menu 
		flex-wrap wrap
		align-items center
		.menu_item
			text-align center

	.image
		display block
		float none
		margin 0 auto

	.second_block
		width 100%

	.img_block
		flex-direction column
		justify-content center
		.image_1
			margin auto
			img
				width 100%
				padding 10px

	.block1
		flex-direction column
	.block3
		flex-direction column